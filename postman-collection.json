{
  "info": {
    "name": "CRM WhatsApp SaaS - Multi-Tenant API",
    "description": "Collection completa da API Multi-Tenant para teste",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "super_admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "tenant_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "tenant_slug",
      "value": "demo-hotel",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Login Super Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('super_admin_token', jsonData.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@seucrm.com\",\n  \"password\": \"change_me_in_production\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "2. Login Tenant Demo",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('tenant_token', jsonData.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@demo.hotel\",\n  \"password\": \"demo123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login?tenant={{tenant_slug}}",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"],
              "query": [
                {
                  "key": "tenant",
                  "value": "{{tenant_slug}}"
                }
              ]
            }
          }
        },
        {
          "name": "3. Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenant_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "4. Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"REFRESH_TOKEN_AQUI\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Super Admin - Tenants",
      "item": [
        {
          "name": "1. Create Tenant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{super_admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Hotel Copacabana\",\n  \"slug\": \"hotelcopacabana\",\n  \"email\": \"admin@hotelcopa.com\",\n  \"plan\": \"BASIC\",\n  \"maxAttendants\": 10,\n  \"maxMessages\": 10000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tenants",
              "host": ["{{base_url}}"],
              "path": ["api", "tenants"]
            }
          }
        },
        {
          "name": "2. List All Tenants",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{super_admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tenants?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "tenants"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "ACTIVE",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "hotel",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "3. Get Tenant by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{super_admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tenants/TENANT_ID_AQUI",
              "host": ["{{base_url}}"],
              "path": ["api", "tenants", "TENANT_ID_AQUI"]
            }
          }
        },
        {
          "name": "4. Update Tenant",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{super_admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ACTIVE\",\n  \"plan\": \"PRO\",\n  \"maxAttendants\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tenants/TENANT_ID_AQUI",
              "host": ["{{base_url}}"],
              "path": ["api", "tenants", "TENANT_ID_AQUI"]
            }
          }
        }
      ]
    },
