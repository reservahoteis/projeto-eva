    },
    {
      "name": "Webhooks - WhatsApp",
      "item": [
        {
          "name": "Verify Webhook (Meta)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/webhooks/whatsapp?hub.mode=subscribe&hub.verify_token=dev_webhook_token_change_me&hub.challenge=1234567890&tenant={{tenant_slug}}",
              "host": ["{{base_url}}"],
              "path": ["webhooks", "whatsapp"],
              "query": [
                {
                  "key": "hub.mode",
                  "value": "subscribe"
                },
                {
                  "key": "hub.verify_token",
                  "value": "dev_webhook_token_change_me"
                },
                {
                  "key": "hub.challenge",
                  "value": "1234567890"
                },
                {
                  "key": "tenant",
                  "value": "{{tenant_slug}}"
                }
              ]
            }
          }
        }
      ]
    }
