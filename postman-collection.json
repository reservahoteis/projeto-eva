                "key": "Authorization",
                "value": "Bearer {{tenant_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/conversations?tenant={{tenant_slug}}&status=OPEN&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "conversations"],
              "query": [
                {
                  "key": "tenant",
                  "value": "{{tenant_slug}}"
                },
                {
                  "key": "status",
                  "value": "OPEN"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "priority",
                  "value": "HIGH",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "João",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "2. Get Conversation by ID",
